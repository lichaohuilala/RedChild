<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pub_color_fourteen"
              android:orientation="vertical"
        >

    <RelativeLayout
        android:id="@+id/fragment_sc_rv_item_rv_item_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >



        <TextView
            android:id="@+id/fragment_sc_rv_item_rv_item_reduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/label_search_cuxiao"
            android:layout_marginLeft="16dp"
            android:paddingRight="16dp"
            android:text="满 减"
            android:textColor="@color/white"
            android:textSize="22sp"
            />
        <TextView
            style="@style/shop_fragment_warp"
            android:layout_toRightOf="@+id/fragment_sc_rv_item_rv_item_reduction"
            android:layout_alignTop="@+id/fragment_sc_rv_item_rv_item_reduction"
           android:text="@string/shop_text"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/fragment_sc_rv_item_rv_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/label_search_cuxiao"
            android:layout_marginLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/shop_text"
            android:textColor="@color/white"
            android:textSize="22sp"

            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/shop_fragment_macth"
        >
        <CheckBox
            android:id="@+id/fragment_sc_rv_item_rv_item_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/shopping_cart_checkbox"
            android:focusable="false"
            android:layout_marginTop="45dp"
            android:focusableInTouchMode="false"
            />
        <ImageView
            android:id="@+id/fragment_sc_rv_item_rv_item_im"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/darkblue"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="50dp"/>
      <RelativeLayout
         style="@style/shop_fragment_macth"
          android:layout_toRightOf="@+id/fragment_sc_rv_item_rv_item_im"
          android:layout_marginLeft="15dp"
         android:layout_marginTop="15dp"
          android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_sc_rv_item_rv_item_content"
            style="@style/shop_fragment_warp"
            android:textSize="25sp"
            android:text="@string/shop_text"/>
        <TextView
            android:id="@+id/fragment_sc_rv_item_rv_item_color"
            style="@style/shop_fragment_warp"
            android:textSize="15sp"
            android:layout_below="@+id/fragment_sc_rv_item_rv_item_content"
            android:visibility="gone"
            android:text="@string/shop_text"/>
        <TextView
            android:id="@+id/fragment_sc_rv_item_rv_item_style"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:layout_below="@+id/fragment_sc_rv_item_rv_item_color"
            android:text="@string/shop_text"/>

          <LinearLayout
              android:id="@+id/ll_xn_no_edit_num"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:layout_alignTop="@+id/fragment_sc_rv_item_rv_item_price"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/xn_no_edit_sub_bt"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:background="@drawable/shoppingcart_sub_btn_enabled"
                  android:scaleType="centerInside"/>

              <TextView
                  android:id="@+id/xn_no_edit_product_num"
                  android:layout_width="40dp"
                  android:layout_height="20dp"
                  android:background="@drawable/shoppingcart_numtext_bg"
                  android:gravity="center"
                  android:inputType="number"
                  android:maxLength="2"
                  android:selectAllOnFocus="true"
                  android:textColor="@color/black"/>

              <ImageView
                  android:id="@+id/xn_no_edit_add_bt"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:background="@drawable/shoppingcart_add_btn_enabled"
                  android:scaleType="centerInside"/>
          </LinearLayout>

          <TextView
              android:id="@+id/fragment_sc_rv_item_rv_item_price"
              style="@style/shop_fragment_warp"
              android:textSize="15sp"
              android:text="@string/shop_text"
              android:layout_marginTop="30dp"
              android:layout_below="@+id/fragment_sc_rv_item_rv_item_content"
              android:layout_alignParentStart="true"/>


      </RelativeLayout>

        <TextView
            android:id="@+id/fragment_sc_rv_item_rv_item_gift"
            style="@style/shop_fragment_warp"
            android:layout_below="@+id/fragment_sc_rv_item_rv_item_im"
            android:text="asdasdasdsdsdsadasdasdasasdasdassdasdasdasdasd"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:visibility="gone"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/fragment_sc_rv_item_rv_item_im"
            android:background="@color/pub_color_fourteen2"
            ></TextView>
    </RelativeLayout>

</LinearLayout>

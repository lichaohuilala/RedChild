<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/item3_textView"
            android:layout_alignParentStart="true"
            android:id="@+id/item3_textView2"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item3_textView2"
        android:layout_marginTop="19dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#f00"
        android:id="@+id/item3_textView3"/>

    <ImageView
        android:id="@+id/item3_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/item3_textView"
        android:layout_below="@+id/item3_image"
        android:layout_alignParentStart="true"/>
</RelativeLayout>

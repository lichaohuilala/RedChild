<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
      android:id="@+id/tv_shopcaer_title_tv"
      style="@style/shop_fragment_title_tv"
     />
    <TextView
        android:id="@+id/tv_shopcaer_compile_tv"
         style="@style/shop_fragment_compile"
        />
    <TextView
        style="@style/show_fragment_line"
        android:layout_below="@+id/tv_shopcaer_title_tv"/>
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_shopcaer_show_recyclerview"
    style="@style/shop_fragment_macth"
    android:layout_below="@+id/tv_shopcaer_title_tv"
    android:layout_marginBottom="50dp"
    ></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        >

        <CheckBox
            android:id="@+id/fragment_sc_item_title_cb_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:button="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:drawableLeft="@drawable/shopping_cart_checkbox"

            />

        <TextView
            android:id="@+id/fragment_sc_item_all"
            style="@style/shop_fragment_warp"
            android:text="@string/shop_all"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"

            android:layout_alignLeft="@id/fragment_sc_item_title_cb_all"/>
        <TextView
            android:id="@+id/fragment_sc_item_select"
            style="@style/shop_fragment_warp"
            android:text="@string/shop_select"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:visibility="gone"
            android:layout_alignLeft="@id/fragment_sc_item_all"/>

        <TextView
            android:id="@+id/fragment_sc_item_close"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="@string/shop_close"
            android:textSize="22sp"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/red"
            />
        <LinearLayout
            android:id="@+id/fragment_sc_complie_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment_sc_item_close">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fragment_sc_item_tatal"
                    style="@style/shop_fragment_warp"
                    android:textSize="15sp"
                    android:paddingTop="4dp"
                    android:text="@string/shop_tatal"
                    />
                <TextView
                    android:id="@+id/fragment_sc_item_tatal_price"
                    style="@style/shop_fragment_warp"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:paddingTop="4dp"
                    android:text="85"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/fragment_sc_item_tatal_freight"
                style="@style/shop_fragment_warp"
                android:textSize="15sp"
                android:text="@string/shop_freight"
                />

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pub_color_fourteen2"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>